@model Client.Models.Orders.OrderViewModel

@{
    ViewData["Title"] = "Order " + Model.Id;
}

@if (ViewBag.Status != null)
{
    @if (ViewBag.Status.IsSuccess)
    {
        <div class="alert alert-success" role="alert">@ViewBag.Status.Message</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Status.Message</div>
    }
}

<a asp-action="Basket">Back</a>

<h1>Order confirmation</h1>
<form asp-action="PostOrder" method="post">
    <div class="card card-body" style="width: 18rem; max-width: 320px">
        <div class="validation" style="color: red" asp-validation-summary="ModelOnly"></div>
        <h4 class="card-title">@Model.Id</h4>
        <h4 class="card-title">
            @foreach (var item in Model.Items)
            {
                <div class="card card-body" style="width: 18rem; max-width: 320px">
                    <h4 class="card-title">@item.Name</h4>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Producer</h6>
                    <h4 class="card-title">$@item.Price</h4>
                    <p class="card-text">@item.Details</p>
                </div>
            }
        </h4>
        <input class="form-control visually-hidden" asp-for="ItemsIds" />
        <div class="validation" style="color: red" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Country"></label>
            <input class="form-control" asp-for="Country" />
            <span style="color: red" asp-validation-for="Country"></span>
        </div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Locality"></label>
            <input class="form-control" asp-for="Locality" />
            <span style="color: red" asp-validation-for="Locality"></span>
        </div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Address"></label>
            <input class="form-control" asp-for="Address" />
            <span style="color: red" asp-validation-for="Address"></span>
        </div>
        <h4 class="card-title">@Model.ReceiverName <span class="mb-2 text-muted">@Model.ReceiverUsername</span></h4>
        <p class="card-text">@Model.DeliveryDate.ToString()</p>
    </div>
    
    <div class="form-group">
        <a asp-action="DeleteOrder" asp-route-id="@Model.Id" class="btn btn-outline-dark">Cancel</a>
        <input type="submit" class="btn btn-outline-dark" value="Purchase" />
    </div>
</form>