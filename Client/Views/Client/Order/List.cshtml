@model IEnumerable<Library.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

@if (ViewBag.Status != null)
{
    @if (ViewBag.Status.IsSuccess)
    {
        <div class="alert alert-success" role="alert">@ViewBag.Status.Message</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Status.Message</div>
    }
}

<a asp-action="ProductList">Back</a>

<h1>Orders</h1>
<div class="d-flex flex-wrap">
    @foreach (var item in Model)
    {
        <div class="card card-body" style="width: 18rem; max-width: 320px">
            <h4 class="card-title">@item.Id</h4>
            <h6 class="card-subtitle mb-2 text-muted">@item.Country, @item.Locality, @item.Address</h6>
            <h4 class="card-title">
                @foreach (var product in item.Items)
                {
                    if (!product.Equals(item.Items.Last()))
                    {
                        <span>@product.Name, </span>
                    }
                    else
                    {
                        <span>@product.Name</span>
                    }
                }
            </h4>
            <h4 class="card-title">@item.Receiver.FirstName @item.Receiver.LastName <span class="mb-2 text-muted">@item.Receiver.Username</span></h4>
            <p class="card-text">@item.DeliveryDate.ToString()</p>
            <a asp-action="DeleteOrder" asp-route-id="@item.Id" class="btn btn-outline-dark">Cancel</a>
        </div>
    }
</div>