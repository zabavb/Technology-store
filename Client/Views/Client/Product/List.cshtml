@model IEnumerable<Library.Models.Product>

@if (ViewBag.Status != null)
{
    @if (ViewBag.Status.IsSuccess)
    {
        <div class="alert alert-success" role="alert">@ViewBag.Status.Message</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Status.Message</div>
    }
}

<div class="mb-3 form-group">
    <form asp-action="ProductList" method="get">
        <input type="text" name="search" placeholder="Search products by name ..." class="form-control" value="@ViewBag.Search" />
        <button type="submit" class="btn btn-outline-dark">Search</button>
    </form>
</div>

@if (Model.Count() == 0)
{
    <h4>Empty</h4>
}
else
{
    <div class="d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div class="card card-body" style="width: 18rem; max-width: 320px">
                <h4 class="card-title">@item.Name</h4>
                <h6 class="card-subtitle mb-2 text-muted">@item.Producer</h6>
                <h4 class="card-title">@item.Price</h4>
                <p class="card-text">@item.Details</p>
                <a asp-action="Product" asp-route-id="@item.Id" class="btn btn-outline-dark">View</a>
                <a asp-action="PostBasket" asp-route-id="@item.Id" class="btn btn-outline-dark">To basket</a>
            </div>
        }
    </div>
}