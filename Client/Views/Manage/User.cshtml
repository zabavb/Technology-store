@model Library.Models.User

@{
    ViewData["Title"] = "Manage users";
}

@if (ViewBag.Status != null)
{
    @if (ViewBag.Status.IsSuccess)
    {
        <div class="alert alert-success" role="alert">@ViewBag.Status.Message</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Status.Message</div>
    }
}

<a asp-action="UserList">Back</a>

<div class="card card-body" style="width: 18rem; max-width: 320px">
    <h4 class="card-title">@Model.Username <span class="mb-2 text-muted">@Model.Role</span></h4>
    <h6 class="card-subtitle">@Model.FirstName @Model.LastName</h6>
    <h4 class="card-title">@Model.Age y. o.</h4>
    <p class="card-text">@Model.Email @Model.Phone</p>
    <h6 class="mb-2 text-muted">Basket:</h6>
    <div class="d-flex flex-wrap">
        @foreach (var product in Model.Basket)
        {
            <h6 class="card-subtitle">@product.Name</h6>
            <h7 class="card-text">@product.Producer</h7>
            <h6 class="card-subtitle">$@product.Price</h6>
        }
    </div>
    <a asp-action="PutUser" asp-route-id="@Model.Id" class="btn btn-outline-dark">Edit</a>
    <a asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-outline-dark">Remove</a>
</div>