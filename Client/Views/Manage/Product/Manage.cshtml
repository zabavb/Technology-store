@using Library.Models
@model Client.Models.Products.ManageProductViewModel

@{
    ViewData["Title"] = "Manage product" + @Model.Brand + " " + @Model.Model;
}

@if (ViewBag.Status != null)
{
    <div class="alert @(ViewBag.Status.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show d-flex align-items-center position-fixed"
         style="top: 70px; right: 20px; z-index: 1050; min-width: 250px;" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi me-2" viewBox="0 0 16 16">
            @if (ViewBag.Status.IsSuccess)
            {
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.354 10.354a.5.5 0 0 0 .707 0l3-3a.5.5 0 1 0-.708-.708L7 9.293 5.646 7.646a.5.5 0 0 0-.708.708l1.5 1.5z" />
            }
            else
            {
                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 0 8a8 8 0 0 0 8 0zM7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zm-.1-5.995a.905.905 0 0 1 .2-.395.715.715 0 0 1 .588-.295.715.715 0 0 1 .588.295.905.905 0 0 1 .2.395c.057.28.083.62.08.995h-.995c-.002-.38.023-.72.08-.995z" />
            }
        </svg>
        <div>@ViewBag.Status.Message</div>
        <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="ProductList" class="btn btn-outline-secondary">Back</a>

@if (ViewBag.IsPost)
{
    <h1 class="text-center text-primary mb-4">Add New Product</h1>
}
else
{
    <h1 class="text-center text-primary mb-4">Edit Product: @Model.Brand @Model.Model</h1>
}

@{
    string action = ViewBag.IsPost ? "PostOrder" : "PutOrder";
}

<div class="card border rounded-1 card-body mb-1" style="background-color: #f8f9fc;">
    <form asp-action="@action" method="post">
        <div class="validation" style="color: red" asp-validation-summary="ModelOnly"></div>
        <div class="row g-3">
            <input type="hidden" asp-for="Id" />
            <div class="col-12">
                <label class="form-label" asp-for="Brand"></label>
                <input class="form-control border rounded-1" asp-for="Brand" />
                <span style="color: red" asp-validation-for="Brand"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="Model"></label>
                <input class="form-control border rounded-1" asp-for="Model" />
                <span style="color: red" asp-validation-for="Model"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="Producer"></label>
                <input class="form-control border rounded-1" asp-for="Producer" />
                <span style="color: red" asp-validation-for="Producer"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control border rounded-1" asp-for="Price" />
                <span style="color: red" asp-validation-for="Price"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="Details"></label>
                <input class="form-control border rounded-1" asp-for="Details" />
                <span style="color: red" asp-validation-for="Details"></span>
            </div>
    
            <div class="form-group text-center">
                <input type="submit" class="btn btn-primary rounded-1" value="Confirm" />
            </div>
        </div>
    </form>
</div>